---
const { innerClasses, outerClasses } = Astro.props
---

<article class={outerClasses}>
    <div class={innerClasses}>
        <slot></slot>
    </div>
</article>

<style>
    article {
        background-color: black;
        border-radius: 20px;
        border: 8px solid black;
        border-top: 10px;
        border-left: 10px;
        padding: 8px;
        position: relative;
    }
    div {
        border-radius: 8px;
        padding: 10px;
        min-width: 200px;
        display: flex;
        flex-direction: column;
        gap: 20px;
        align-items: center;
        max-height: 300px;
    }
    img {
        image-rendering: pixelated;
        max-width: 100%;
        max-height: 280px;
    }
</style>